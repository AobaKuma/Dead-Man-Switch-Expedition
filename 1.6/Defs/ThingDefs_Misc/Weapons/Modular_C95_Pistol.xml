<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="DMSE_BaseHumanMakeableGun">
		<defName>DMSE_Modular_C95_Pistol</defName>
		<label>Caseless pistol</label>
		<description>A semi-automatic pistol utilizing caseless ammunition, commonly employed for personal defense.</description>
		<graphicData>
			<texPath>Things/Weapons/DMS_C95Caseless</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2</drawSize>
		</graphicData>
		<soundInteract>Interact_Autopistol</soundInteract>
		<statBases>
			<WorkToMake>6300</WorkToMake>
			<Mass>1.9</Mass>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.71</AccuracyShort>
			<AccuracyMedium>0.35</AccuracyMedium>
			<AccuracyLong>0.15</AccuracyLong>
			<RangedWeapon_Cooldown>0.4</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<DMSE_TantastenAlloy>15</DMSE_TantastenAlloy>
			<DMSE_Graphene>10</DMSE_Graphene>
			<ComponentStamped>2</ComponentStamped>
		</costList>
		<weaponClasses>
			<li>RangedLight</li>
			<li>ShortShots</li>
		</weaponClasses>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_MachinePistol</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>14.9</range>
				<soundCast>Shot_Revolver</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<comps />
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<modExtensions>
			<li MayRequire="ceteam.combatextended" Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0,0.05</DrawOffset>
			</li>
			<li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>(0.9,0.9)</drawSize>
				<offsets>
					<li>(0.15,0.05)</li>
				</offsets>
				<isAlternately>true</isAlternately>
			</li>
		</modExtensions>
	</ThingDef>
</Defs>
