    </recipeUsers>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMSE_VacuumMaterial</researchPrerequisite>
    <workAmount>22000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Tungsteel</li>
          </thingDefs>
        </filter>
        <count>200</count>
