<!-- 反應釜 -->
  <!-- 化合燃料產石墨稀 -->
  <RecipeDef ParentName="DMSE_MicroGrav_Recipe">
    <defName>DMSE_Make_Graphene_Chemfuel</defName>
    <label>Make Graphene with Chemfuel</label>
    <description>Producing a small amount of graphene materials using Chemfuel and wood.</description>
    <jobString>Producing.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <recipeUsers>
      <li>DMSE_MicrogravityFacility</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMSE_Microgravity</researchPrerequisite>
    <workAmount>20000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>35</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <DMSE_Graphene>5</DMSE_Graphene>
    </products>
  </RecipeDef>
  
