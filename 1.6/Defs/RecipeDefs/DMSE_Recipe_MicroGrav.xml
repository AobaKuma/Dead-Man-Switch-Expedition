<Defs>
  <RecipeDef Name="DMSE_MicroGrav_Recipe" Abstract="True">
    <modExtensions>
      <li Class="Fortified.ModExt_EnvironmentalBill">
        <OnlyInMicroGravity>true</OnlyInMicroGravity>
