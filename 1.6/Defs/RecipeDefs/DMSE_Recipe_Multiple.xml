<?xml version="1.0" encoding="utf-8"?>
<Defs>
  
  <!-- 集群控制晶片 淨室暗室 -->
  <RecipeDef>
    <defName>DMSE_Make_ComponentControlChip</defName>
    <label>Make Cluster Control Chipsets</label>
    <description>Producing a Cluster Control Chipsets.</description>
    <jobString>Producing.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <recipeUsers>
      <li>DMS_TableMachinePrinter</li>
      <li>DMSE_MicrogravityFacility</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <researchPrerequisite>DMSE_Microgravity</researchPrerequisite>
    <workAmount>90000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DMSE_TantastenAlloy</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentStamped</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
	    <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neurocomputer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DMSE_TantastenAlloy</li>
        <li>ComponentStamped</li>
        <li>ComponentSpacer</li>
        <li>Neurocomputer</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ComponentControlChip>1</ComponentControlChip>
    </products>
    <modExtensions>
      <li Class="Fortified.ModExt_EnvironmentalBill">
        <OnlyInCleanliness>true</OnlyInCleanliness>
        <OnlyInDarkness>true</OnlyInDarkness>
      </li>
    </modExtensions>
  </RecipeDef>

